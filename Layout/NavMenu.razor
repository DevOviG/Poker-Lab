<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Poker Lab</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All" style="display: flex !important; align-items: center !important;">
                <span class="bi bi-mortarboard-fill me-3" aria-hidden="true" style="font-size: 1.25rem; display: flex; align-items: center;"></span> 
                <span style="display: flex; align-items: center;">Learn</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="trainer" style="display: flex !important; align-items: center !important;">
                <span class="bi bi-controller me-3" aria-hidden="true" style="font-size: 1.25rem; display: flex; align-items: center;"></span> 
                <span style="display: flex; align-items: center;">Practice</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    // Setting this to false forces the menu to be VISIBLE on desktop by default
    private bool collapseNavMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}