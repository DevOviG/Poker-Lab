<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Poker Lab</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable d-md-block">
    <nav class="flex-column">
        
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center gap-3" href="" Match="NavLinkMatch.All">
                <span class="bi bi-mortarboard-fill" aria-hidden="true" style="font-size: 1.2rem;"></span> 
                <span>Learn</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center gap-3" href="trainer">
                <span class="bi bi-controller" aria-hidden="true" style="font-size: 1.2rem;"></span> 
                <span>Practice</span>
            </NavLink>
        </div>

    </nav>
</div>

@code {
    // FIX 3: Set to true. Now safe because 'd-md-block' handles desktop visibility.
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}