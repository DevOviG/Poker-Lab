<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Poker Lab</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3 mb-2">
            <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All" 
                     style="padding: 0.75rem 1rem; display: flex !important; align-items: center !important;">
                <span class="bi bi-mortarboard-fill me-3" aria-hidden="true" 
                      style="font-size: 1.4rem; min-width: 1.5rem; display: flex; align-items: center;"></span> 
                <span style="font-size: 1.1rem; font-weight: 500;">Learn</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="trainer" 
                     style="padding: 0.75rem 1rem; display: flex !important; align-items: center !important;">
                <span class="bi bi-controller me-3" aria-hidden="true" 
                      style="font-size: 1.4rem; min-width: 1.5rem; display: flex; align-items: center;"></span> 
                <span style="font-size: 1.1rem; font-weight: 500;">Practice</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    // Keep as false so it's visible on Desktop. 
    // This makes it open by default on mobile too.
    private bool collapseNavMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}